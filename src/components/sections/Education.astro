---
import Section from "../Section.astro";
import { education } from "@cv";
---

<Section title="Nivel Educacional">
  <ul>
    {
      education.map(
        ({studyType, area, institution,startDate,endDate}) => {
            const StartYear = new Date(startDate).getFullYear();
            const EndYear = endDate !== null ? new Date(endDate).getFullYear() : "Actual";
            const years = `${StartYear} - ${EndYear}`;
        return (
        <li>
              <article>
                <header>
                  <div>
                    <h3>{area}</h3>
                    <p>{studyType}</p>
                  </div>
                  <time>
                    <p>{years}</p>
                  </time>
                </header>
                <footer>
                  <p>{institution}</p>
                </footer>
              </article>
            </li>
        );
      })
    }
  </ul>
</Section>
<style>
    ul {
      display: flex;
      flex-direction: column;
      gap: 32px;
    }
    article h3 {
      font-weight: 500;
      color: #111;
    }
    article h4 {
      font-weight: 400;
      color: #222;
    }
    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
    }
    time {
      font-size: 0.85em;
      color: #555;
    }
  </style>